@{
    ViewBag.Title = "Ingredients BackBone.JS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    <link href="@Url.Content("~/ContentBB/Ingredients/Ingredients.css")" rel="stylesheet" type="text/css" />
}
@section js{
    <script src="@Url.Content("~/Scripts/backbone.js")" type="text/javascript"> </script>
    @* 
        <script src="@Url.Content("~/Scripts/knockout.dev.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/knockback.js")" type="text/javascript"></script>
    *@
    <script src="@Url.Content("~/ContentBB/Ingredients/Ingredients.js")" type="text/javascript"> </script>
}
<div class="row">
    <div class="span4">
        <h3>Ingredients list</h3>
        <br/>
        <table id="tableIngredients" class="table table-bordered table-selection">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                </tr>
            </thead>
        </table>
        <script type="text/template" id="tpl-ingredient-list-item">
            <td>
                <%= Id %>
            </td>
            <td>
                <%= Name %>
            </td>
        </script>
    </div>
    <div class="row">
        <div class="span4">
            <h3>Details</h3>
            <br/>
            <div id="header">
            </div>
            <br/>
            <script type="text/template" id="tpl-header">
                <input type="button" class="btn btn-small" id="new" value="New Ingredient" />
            </script>
            <div id="divDetails">
            </div>
            <script type="text/template" id="tpl-ingredient-details">
                <div>
                    <label>Id:</label>
                    <input type="text" id="Id" name="Id" value="<%= Id %>" disabled />
                    <label>Name:</label>
                    <input type="text" id="Name" name="Name" value="<%= Name %>" required/>
                    <input type="button" class="btn btn-small" id="save" value="Save" />
                    <input type="button" class="btn btn-small" id="delete" value="Delete" />
                </div>
            </script>
        </div>
    </div>
</div>
